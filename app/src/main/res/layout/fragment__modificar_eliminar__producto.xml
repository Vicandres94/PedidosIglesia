<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    tools:context="com.example.equipo.pedidosiglesia.Controller.Fragment_Registrar_Producto">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles Producto"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/abc_input_method_navigation_guard" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_nombre_Categoria"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="45dp"
        android:textColor="#1764bb"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Producto"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="145dp"
        android:textColor="#1764bb"
        android:textColorHighlight="#0b29bf"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:hint="Producto"
        android:focusable="true"
        android:id="@+id/et_Nombre_producto"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_valor_Producto"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="230dp"
        android:textColor="#1764bb"
        android:textColorHighlight="#0b29bf"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="250dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:hint="Valor Unitario "
        android:focusable="true"
        android:id="@+id/et_valor_uniario"
        />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/btnModificarProducto"
        android:layout_gravity="left|bottom"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnEliminarProducto"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Categoria_Modificar_Producto"
        android:layout_gravity="center_horizontal|top"
        android:spinnerMode="dropdown"
        android:layout_marginTop="80dp"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/abc_cab_background_top_mtrl_alpha" />


</FrameLayout>
