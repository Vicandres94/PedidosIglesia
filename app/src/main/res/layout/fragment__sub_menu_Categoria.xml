<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    tools:context="com.example.equipo.pedidosiglesia.Fragment_SubMenu">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_menu_Categoria"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/abc_input_method_navigation_guard" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_marginTop="45dp"
        android:textColor="#1764bb"
        android:textColorHighlight="#0b29bf"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:hint="Categoria"
        android:focusable="true"
        android:id="@+id/et_Categoria_Menu"
        />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Modificar"
        android:id="@+id/btnModificarCategoria"
        android:layout_gravity="left|bottom"
        android:textStyle="bold"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:id="@+id/btnEliminarrCategoria"
        android:layout_gravity="right|bottom"
        android:textStyle="bold"
        android:layout_marginRight="30dp" />

</FrameLayout>
